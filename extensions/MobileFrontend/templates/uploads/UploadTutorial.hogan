<button class="slider-button icon icon-20px prev"></button>
<ul>
	{{#pages}}
	<li class="slide slide-image">
		<strong>{{caption}}</strong>
		<p>{{text}}</p>
		{{#button}}
		{{#funnel}}
		<div class="button"></div>
		{{/funnel}}
		{{^funnel}}
		<button class="cancel button">{{button}}</button>
		{{/funnel}}
		{{/button}}
	</li>
	{{/pages}}
</ul>
<button class="slider-button icon icon-20px next"></button>
